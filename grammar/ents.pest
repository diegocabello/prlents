// ents.pest - Grammar for ENTS format

file = { SOI ~ (tag ~ NEWLINE)* ~ tag? ~ EOI }

tag = { indent ~ tag_type ~ ws ~ tag_name ~ alias? }

tag_type = {
    exclusive_tag |
    dud_tag |
    normal_tag
}

normal_tag = { "-" }
dud_tag = { "+" }
exclusive_tag = { "+-" | "-+" }

tag_name = @{ (!(NEWLINE | "(") ~ ANY)+ }

alias = { "(" ~ alias_name ~ ")" }
alias_name = @{ (!(")") ~ ANY)+ }

indent = @{ " "* }
ws = @{ " "+ }

WHITESPACE = _{ " " }
COMMENT = _{ "#" ~ (!NEWLINE ~ ANY)* }
